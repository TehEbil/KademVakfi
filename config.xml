<?xml version='1.0' encoding='utf-8'?>
<widget id="com.cycrosoft.kademvakfi" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>KademVakfi</name>
    <description>
        A basic Framework7 template for PhoneGap.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
	<icon src="icon-60@3x.png" platform="ios" width="180" height="180" />
	<icon src="icon.png" />
    <content src="index.html" />
	
    <access origin="*" subdomains="true" />
    <allow-navigation href="*" />
    <allow-intent href="*" />
	
    <platform name="android">
        <preference name="android-minSdkVersion" value="16" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
    </platform>

	
    <platform name="android">
        <icon src="icon.png" density="ldpi" />
        <icon src="icon.png" density="mdpi" />
        <icon src="icon.png" density="hdpi" />
        <icon src="icon.png" density="xhdpi" />
        <icon src="icon.png" density="xxhdpi" />
        <icon src="icon.png" density="xxxhdpi" />
        <splash src="icon_splash.png" density="land-hdpi"/>
        <splash src="icon_splash.png" density="land-ldpi"/>
        <splash src="icon_splash.png" density="land-mdpi"/>
        <splash src="icon_splash.png" density="land-xhdpi"/>
        <splash src="icon_splash.png" density="land-xhdpi"/>
        <splash src="icon_splash.png" density="land-xhdpi"/>
        <splash src="icon_splash.png" density="port-hdpi"/>
        <splash src="icon_splash.png" density="port-ldpi"/>
        <splash src="icon_splash.png" density="port-mdpi"/>
        <splash src="icon_splash.png" density="port-xhdpi"/>
        <splash src="icon_splash.png" density="port-xxhdpi"/>
        <splash src="icon_splash.png" density="port-xxxhdpi"/>
    </platform>

    <platform name="ios">
        <icon src="icon.png" width="180" height="180" />
        <icon src="icon.png" width="60" height="60" />
        <icon src="icon.png" width="120" height="120" />
        <icon src="icon.png" width="76" height="76" />
        <icon src="icon.png" width="152" height="152" />
        <icon src="icon.png" width="40" height="40" />
        <icon src="icon.png" width="80" height="80" />
        <icon src="icon.png" width="57" height="57" />
        <icon src="icon.png" width="114" height="114" />
        <icon src="icon.png" width="72" height="72" />
        <icon src="icon.png" width="144" height="144" />
        <icon src="icon.png" width="29" height="29" />
        <icon src="icon.png" width="58" height="58" />
        <icon src="icon.png" width="50" height="50" />
        <icon src="icon.png" width="100" height="100" />
        <splash src="icon_splash.png" width="320" height="480"/>
        <splash src="icon_splash.png" width="640" height="960"/>
        <splash src="icon_splash.png" width="768" height="1024"/>
        <splash src="icon_splash.png" width="1536" height="2048"/>
        <splash src="icon_splash.png" width="1024" height="768"/>
        <splash src="icon_splash.png" width="2048" height="1536"/>
        <splash src="icon_splash.png" width="640" height="1136"/>
        <splash src="icon_splash.png" width="750" height="1334"/>
        <splash src="icon_splash.png" width="1242" height="2208"/>
        <splash src="icon_splash.png" width="2208" height="1242"/>
    </platform>
	
    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
    <plugin name="cordova-plugin-network-information" spec="~1.3.2" />
    <plugin name="cordova-plugin-app-version" spec="~0.1.9" />
    <plugin name="phonegap-plugin-push" spec="~1.10.0">
        <variable name="SENDER_ID" value="492870102848" />
    </plugin>
    <plugin name="cordova-plugin-device" spec="~1.1.5" />
    <plugin name="cordova-plugin-crosswalk-webview" spec="~2.3.0" />
</widget>
